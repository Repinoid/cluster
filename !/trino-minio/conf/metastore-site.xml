<configuration>
    <!-- Metastore settings -->
    <property>
        <name>metastore.thrift.uris</name>
        <value>thrift://hive-metastore:9083</value>
        <description>Thrift URI for the remote metastore.</description>
    </property>

    <!-- Database connection settings - PostgreSQL -->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>org.postgresql.Driver</value>
        <description>PostgreSQL JDBC driver</description>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:postgresql://postgres:5432/metastore_db?sslmode=disable&amp;connectTimeout=30000&amp;socketTimeout=60000</value>
        <description>PostgreSQL connection URL</description>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>admin</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>admin</value>
    </property>

    <property>
        <name>hive.aux.jars.path</name>
        <value>/opt/hadoop-3.2.0/share/hadoop/common/lib/postgresql-jdbc.jar</value>
        <description>PostgreSQL JDBC driver JAR</description>
    </property>

    <!-- Connection pool optimization -->
    <property>
        <name>javax.jdo.option.ConnectionPoolSize</name>
        <value>5</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionTimeout</name>
        <value>60000</value>
    </property>
    <property>
        <name>datanucleus.connectionPoolingType</name>
        <value>HikariCP</value>
    </property>

    <!-- Hive metastore specific timeouts -->
    <property>
        <name>hive.metastore.client.socket.timeout</name>
        <value>300</value>
    </property>

    <!-- MinIO/S3 configuration -->
    <property>
        <name>fs.s3a.access.key</name>
        <value>minio</value>
    </property>
    <property>
        <name>fs.s3a.secret.key</name>
        <value>mpassword</value>
    </property>
    <property>
        <name>fs.s3a.endpoint</name>
        <value>http://minio:9000</value>
    </property>
    <property>
        <name>fs.s3a.path.style.access</name>
        <value>true</value>
    </property>

    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>s3a://hive/warehouse</value>
        <description>Warehouse directory in MinIO</description>
    </property>
    
    <!-- PostgreSQL specific optimizations -->
    <property>
        <name>datanucleus.rdbms.stringLengthLimit</name>
        <value>4000</value>
    </property>
    
    <property>
        <name>datanucleus.identifierFactory</name>
        <value>datanucleus1</value>
    </property>
</configuration>